<h1> Creating a Todo </h1>
<%= form_for @todo do |f| %>

 <% if @todo.errors.any? %>
 <h2> The following errors prevented saving the data </h2>
 <ul>
  <% @todo.errors.full_messages.each do |msg| %>

  <li><%= msg %></li>

  <% end %>
 </ul>

 <% end %>

    <p>
     <%= f.label :name%> <br>
     <%= f.text_field :name%>
    </p>

    <p>
    <%= f.label :description%> <br>
    <%= f.text_area :description%>
    </p>

    <p>
    <%= f.submit %>
    </p>
    <% end %>
    <%= link_to "Back to todos path", todos_path %>